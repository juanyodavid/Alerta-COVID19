<script> var marker, lat, lng;
    var ubi;
    function initialize() {
        var myLatLng = new google.maps.LatLng(41.5, 2),
            myOptions = {
                zoom: 4,
                center: myLatLng,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            },
            map = new google.maps.Map(document.getElementById('map-canvas'), myOptions);
        marker = new google.maps.Marker({ position: myLatLng, map: map, draggable: true });
        google.maps.event.addListener(marker, 'dragend', update);
       // console.log("se ejecuto el mapa");
        marker.setMap(map);
    }

    function update() {
        var path = marker.getPosition();
        lat = path.lat();
        lng = path.lng()
        ubi = lat + "," + lng
        document.getElementById("ubicacion").value = ubi;

    }
  //  console.log(ubi);

    initialize();
</script>