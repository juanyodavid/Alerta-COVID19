{{#each locales}}

<div class="card text-white bg-primary mb-3" style="max-width: auto;">
  <div class="card-header d-flex justify-content-between align-items-center" style="color:#ffc107;">
    {{propietario}} - {{fecha}}
    <a href="/local/edit/{{_id}}"><i class="fas fa-edit" style="color:#ffc107;"></i></a>
  </div>
  <div class="card-body">
    <h5 class="card-title">{{lugar}}</h5>
    <p class="card-text d-flex justify-content-between align-items-center">Este lugar se encuentra en: {{ubicacion}}
     </p> <form action="/local/delete/{{_id}}?_method=DELETE" id="formulario" method="POST">
     <input type="hidden" value="DELETE" name="_method">
  <button class="btn btn-block " onclick="alert_func()" ><i class="fas fa-trash-alt" style="color:#ff4d07;"></i></button>
     </form>
   
  </div>
</div>
{{else}}
<div class="card text-white bg-primary mb-3" style="max-width: auto;">
  <div class="card-header d-flex justify-content-between align-items-center" style="color:#ffc107;">
<h1>No tienes ning√∫n lugar agregado</h1>
  </div>
  <div class="card-body">
   
    <p class="card-text ">Si desea agregar presione 
      <a href="/local/add"><i class="fas fa-plus-square" style="color:#ffc107;"></i></a>
    </p>
  </div>
</div>
{{/each}}

<script>
function alert_func() {
  var txt;
  if (confirm("Esta seguro que desea eliminar?")) {
    $("#formulario").submit();
    
  } else {
    txt = "You pressed Cancel!";
  }
  alert(txt);
}
</script>